<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:padding="10dp"
        card_view:cardBackgroundColor="@color/background_material_light"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="120dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center"
                android:text="ROOM PERSISTANCE LIBRARY"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_namaruang"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/form_shape"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="15dp"
                    android:textSize="14dp"
                    android:hint="Nama Ruangan"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_kodegedung"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/form_shape"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="15dp"
                    android:textSize="14dp"
                    android:hint="Kode Gedung"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_kapasitasruang"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/form_shape"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="15dp"
                    android:textSize="14dp"
                    android:hint="Kapasitas Ruang"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/bt_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_shape"
                android:fontFamily="@font/poppinsbold"
                android:paddingLeft="15dp"
                android:text="Submit"
                android:layout_marginTop="42dp"
                android:textColor="@android:color/white"
                android:textSize="18dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>